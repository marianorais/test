        $(document).ready(function () {
            var icon = "";
            $("input:checkbox").on('click', function () {
                // in the handler, 'this' refers to the box clicked on
                var $box = $(this);
                if ($box.is(":checked")) {
                    // the name of the box is retrieved using the .attr() method
                    // as it is assumed and expected to be immutable
                    var group = "input:checkbox[name='" + $box.attr("name") + "']";
                    // the checked state of the group/box on the other hand will change
                    // and the current value is retrieved using .prop() method
                    $(group).prop("checked", false);
                    $box.prop("checked", true);
                    icon = $box[0].value;
                    console.log(icon);
                } else {
                    $box.prop("checked", false);
                }
            });

            $("#btnsubmit").click(function (e) {
                document.getElementById("btnsubmit").disabled = true;
                var id = document.getElementById('idValue').value;
                var name = document.getElementById('nameValue').value;
                //var selectType = document.getElementById('selectType').value;
                //var icon = document.getElementById('iconoValue').value;
                var fatherTag = document.getElementById('tagFatherValue').value;

                const formData = new FormData();
                formData.append('TagID', id);
                formData.append('TagName', name);
                //formData.append('Types', selectType);
                formData.append('IconCode', icon);
                formData.append('FatherTag', fatherTag);
                $.ajax({
                    url: baseUrl + "/Home/UpdateTag",
                    type: "POST",
                    dataType: 'json',
                    processData: false,
                    contentType: false,
                    data: formData,
                }).done(function (res) {
                    if (res.status === 'success') {
                        toastr.success('The tag was updated successfully');
                        setTimeout(function () {
                            window.location.href = "@Url.Action("ShowTags", "Home")";
                        }, 2000);
                    } else {
                        document.getElementById("btnsubmit").disabled = false;
                        toastr.error(res.message);
                    }
                    console.log('Success');
                }).fail(function (e, s, t) {
                    console.log('Failed');
                });
            });
            //Delete
            $("#btndelete").click(function (e) {
                var id = document.getElementById('idValue').value;

                const formData = new FormData();
                formData.append('id', id);
                $.ajax({
                    url: baseUrl + "/Home/DeleteTag",
                    type: "POST",
                    dataType: 'json',
                    //enctype: 'multipart/form-data',
                    processData: false,
                    contentType: false,
                    //contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: formData,
                }).done(function (res) {
                    if (res.status === 'success') {
                        toastr.success('The tag was deleted successfully');
                        setTimeout(function () {
                            window.location.href = "@Url.Action("ShowTags", "Home")";
                        }, 2000);
                    } else {
                        toastr.error(res.message);
                    }
                    console.log('Success');
                }).fail(function (e, s, t) {
                    console.log('Failed');
                });
            });

        });
    </script>

